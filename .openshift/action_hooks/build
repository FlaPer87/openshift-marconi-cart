#!/bin/sh

version=${MARCONI_BRANCH:-master}
environment="../../venv/"

set +e
rm -rf tmp/redis
rm -rf $environment
mkdir tmp
set -e


virtualenv $environment
source $environment/bin/activate

pushd tmp

git clone https://git.openstack.org/openstack/marconi -b $version

cd marconi
pip install .

popd
rm -rf tmp/redis
